<?xml version="1.0" encoding="UTF-8" ?>
<!--
scan: 当此属性设置为true时，配置文件如果发生改变，将会被重新加载，默认值为true。
scanPeriod: 设置监测配置文件是否有修改的时间间隔，如果没有给出时间单位，默认单位是毫秒。当scan为true时，此属性生效。默认的时间间隔为1分钟。
debug:当此属性设置为true时，将打印出logback内部日志信息，实时查看logback运行状态。默认值false。
-->
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <contextName>defaultContext</contextName>
    <property name="logPath" value="${log.path:-./log-dir}"/>
    <property name="logLevel" value="${logLevel:-INFO}"/>
    <property name="queueSize" value="${queueSize:-8192}"/>
    <property name="debugLevelFileName" value="DEBUG"/>
    <property name="infoLevelFileName" value="INFO"/>
    <property name="warnLevelFileName" value="WARN"/>
    <property name="errorLevelFileName" value="ERROR"/>
    <property name="defaultLogPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [线程:%thread] [类:%logger{0}:%line-行] [方法:%method] [链路标识:%X{UUID}] %msg%n"/>
    <!--<property name="logPatternConsole" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%boldYellow(%thread)] [%highlight(%-5level)] %boldGreen(%logger{0}) %msg%n"/>-->
    <!--<property name="logPatternFile" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %thread %-5level %logger{0} %msg%n"/>-->

    <!-- 控制台日志输出 -->
    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <encoder>
            <pattern>${defaultLogPattern}</pattern>
        </encoder>
    </appender>

    <!-- 日志文件输出 -->
    <appender name="debugLevelAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logPath}/${debugLevelFileName}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logPath}/%d{yyyy-MM-dd,aux}/${debugLevelFileName}-%d{HH}.log</fileNamePattern>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <encoder>
            <pattern>${defaultLogPattern}</pattern>
        </encoder>
    </appender>
    <appender name="infoLevelAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logPath}/${infoLevelFileName}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logPath}/%d{yyyy-MM-dd,aux}/${infoLevelFileName}-%d{HH}.log</fileNamePattern>
            <!--<maxHistory>24</maxHistory>-->
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>${defaultLogPattern}</pattern>
        </encoder>
    </appender>
    <appender name="warnLevelAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logPath}/${warnLevelFileName}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logPath}/%d{yyyy-MM-dd,aux}/${warnLevelFileName}-%d{HH}.log</fileNamePattern>
            <!--<maxHistory>24</maxHistory>-->
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>${defaultLogPattern}</pattern>
        </encoder>
    </appender>
    <appender name="errorLevelAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logPath}/${errorLevelFileName}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logPath}/%d{yyyy-MM-dd,aux}/${errorLevelFileName}-%d{HH}.log</fileNamePattern>
            <!--<maxHistory>24</maxHistory>-->
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>${defaultLogPattern}</pattern>
        </encoder>
    </appender>

    <appender name="debugLevelAsyncAppender" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>${queueSize}</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="debugLevelAppender"/>
    </appender>
    <appender name="infoLevelAsyncAppender" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>${queueSize}</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="infoLevelAppender"/>
    </appender>
    <appender name="warnLevelAsyncAppender" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>${queueSize}</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="warnLevelAppender"/>
    </appender>
    <appender name="errorLevelAsyncAppender" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>${queueSize}</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="errorLevelAppender"/>
    </appender>

    <root level="${logLevel}">
        <appender-ref ref="consoleAppender"/>
        <appender-ref ref="debugLevelAsyncAppender"/>
        <appender-ref ref="infoLevelAsyncAppender"/>
        <appender-ref ref="warnLevelAsyncAppender"/>
        <appender-ref ref="errorLevelAsyncAppender"/>
    </root>
</configuration>